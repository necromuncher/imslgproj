@model IMS.Application.Models.AgentPageModel

@{
    ViewBag.Title = "Delete Agent";
}

<h2>Delete Agent</h2>
<p>
    Use the form below to delete an agent. 
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "Agent deletion was unsuccessful. Please correct the errors and try again.")
    <div>
        <fieldset>
            <legend>Agent Information to Delete</legend>
            <br />
            <br />
            <div class="editor-label">
                ID
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.CurrentAgent.PK_mstrAgent)
                @Html.ValidationMessageFor(m => m.CurrentAgent.PK_mstrAgent)
            </div>
            <div class="editor-label">
                Agent Name
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.CurrentAgent.AgentName)
                @Html.ValidationMessageFor(m => m.CurrentAgent.AgentName)
            </div>
            
            <p>
                <input type="submit" value="Delete" />
            </p>
        </fieldset>
    </div>
}
