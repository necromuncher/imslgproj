@model IMS.Application.Models.AgentPageModel

@{
    ViewBag.Title = "Edit Agent";
}

<h2>Create a New Agent</h2>
<p>
    Use the form below to edit agent. 
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
    <div>
        <fieldset>
            <legend>Account Information</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.CurrentAgent.AgentName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.CurrentAgent.AgentName)
                @Html.ValidationMessageFor(m => m.CurrentAgent.AgentName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.CurrentAgent.AgentAddress)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.CurrentAgent.AgentAddress)
                @Html.ValidationMessageFor(m => m.CurrentAgent.AgentAddress)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.CurrentAgent.ContactPerson)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.CurrentAgent.ContactPerson)
                @Html.ValidationMessageFor(m => m.CurrentAgent.ContactPerson)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.CurrentAgent.TelephoneNumber)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.CurrentAgent.TelephoneNumber)
                @Html.ValidationMessageFor(m => m.CurrentAgent.TelephoneNumber)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.CurrentAgent.IsActive)
            </div>
            <div class="editor-field">
                @Html.CheckBoxFor(m => m.CurrentAgent.IsActive)
                @Html.ValidationMessageFor(m => m.CurrentAgent.IsActive)
            </div>

            <p>
                <input type="submit" value="Save" />
            </p>
        </fieldset>
    </div>
}
