@model IMS.Application.Models.UserPageModel
@{
    ViewBag.Title = "List of Users";
}

<script src="../../Scripts/Request/Agency.js" type="text/javascript"></script>
<link href="../../Content/Admin.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="../../Scripts/Helper/humane.min.js"></script>

<div class = "main-input-wrap">
<div style=" padding: 30px 30px 0px 30px">
    <form id="input-form" name="input-form" style=" padding: 20px">
    @Html.ValidationSummary(true, "Agent creation was unsuccessful. Please correct the errors and try again.")
    <div>
        <fieldset>
            <legend>User Information</legend>
            <div class="editor-label">
                @Html.LabelFor(m => m.CurrentUser.UserCode)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.CurrentUser.UserCode)
                @Html.ValidationMessageFor(m => m.CurrentUser.UserCode)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.CurrentUser.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.CurrentUser.UserName)
                @Html.ValidationMessageFor(m => m.CurrentUser.UserName)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.CurrentUser.UserPassword)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.CurrentUser.UserPassword)
                @Html.ValidationMessageFor(m => m.CurrentUser.UserPassword)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.ConfirmPassword)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.ConfirmPassword)
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.CurrentUser.IsActive)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.CurrentUser.IsActive, new { @type = "hidden" })
                @Html.ValidationMessageFor(m => m.CurrentUser.IsActive)
                <SELECT name="isValidOption" id="isValidOption">
                 <OPTION VALUE="True">True
                 <OPTION VALUE="False" SELECTED>False
                </SELECT>
            </div>
            <div class="editor-field" hidden="hidden">
                @Html.TextBoxFor(m => m.PkeyForView)
            </div>
            <hr />
            <p>
                <input type="submit" value="Add" id="cmdAdd"/>
                <input type="submit" value="Remove" id="cmdRemove" />
                <input type="submit" value="Update" id="cmdUpdate" />
            </p>
        </fieldset>
    </div>
    </form>
    </div>
<hr />

<h2>List of Users</h2>
<div class="main-grid-wrap" style=" padding: 20px" >
<table id="agent-list">
    <tr>
        <th>
            User Code
        </th>
        <th>
            User Name
        </th>
        <th>
            Password
        </th>
        <th>
            Confirm Password
        </th>
        <th>
            Is Active
        </th>
        <th>
            Is Admin
        </th>
        <th style="display:none"></th>
        <th></th>
    </tr>

    @foreach (var item in Model.AllUsers) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserPassword)
        </td>
        <td>
            @Html.CheckBoxFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.CheckBoxFor(modelItem => item.IsAdmin)
        </td>
        <td style="display:none">
            @Html.DisplayFor(modelItem => item.PK_appUsers)
        </td>
    </tr>
}
</table>
</div>
</div>